<div class="px-4 px-lg-0">
  <div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Nazwa oferty</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Cena</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Ilosc</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Usun</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                @foreach(var item in Model.ElementyKoszyka)
                {
                  <tr>
                  <th scope="row" class="border-0">
                    <div class="p-2">
                      <img src="https://bootstrapious.com/i/snippets/sn-cart/product-1.jpg" alt="" width="70" class="img-fluid rounded shadow-sm">
                      <div class="ml-3 d-inline-block align-middle">
                        <h5 class="mb-0"> <a href="#" class="text-dark d-inline-block align-middle">  @item.RodzajTransportu.Nazwa </a></h5><span class="text-muted font-weight-normal font-italic d-block">  </span>
                      </div>
                    </div>
                  </th>
                  <td class="border-0 align-middle"><strong>@item.RodzajTransportu.Cena.ToString("0.00")</strong></td>
                  <td class="border-0 align-middle"><strong>@item.Ilosc</strong></td>
                  <td class="border-0 align-middle"><a href="#" class="text-dark"><i class="fa fa-trash"></i></a></td>
                  </tr>
                }
              </tbody>
            </table>
          </div>
          <!-- End -->
        </div>
      </div>

      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Rabaty</div>
          <div class="p-4">
            <p class="font-italic mb-4">Dodaj kod rabatowy</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="Wpisz kod rabatowy" aria-describedby="button-addon3" class="form-control border-0">
              <div class="input-group-append border-0">
                <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Zastosuj</button>
              </div>
            </div>
          </div>
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Wiadomosc dla sprzedajacego</div>
          <div class="p-4">
            <p class="font-italic mb-4">Jezeli masz jakiekolwiek informacje, ktore moga pomoc kurierowi prosze wpisac ponizej </p>
            <textarea name="" cols="30" rows="2" class="form-control"></textarea>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Podsumowanie </div>
          <div class="p-4">
            <p class="font-italic mb-4">  </p>
            <ul class="list-unstyled mb-4">
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Do zapłaty: </strong><strong>@Model.Razem.ToString("0.00")</strong></li>
              
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Wartość zamówienia: </strong>
                <h5 class="font-weight-bold"> @Model.Razem.ToString("0.00") </h5>
              </li>
            </ul><a href="#" class="btn btn-dark rounded-pill py-2 btn-block">Przejdz do finalizacji zamowienia</a>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
