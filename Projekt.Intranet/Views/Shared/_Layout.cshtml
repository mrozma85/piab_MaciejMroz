                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item px-2"><a class="nav-item px-2"><a class="nav-link fw-medium active" asp-area="" asp-controller="Nawigacja" asp-action="Index">Nawigacja</a>
                        </li>
                        <li class="nav-item px-2"><a class="nav-item px-2"><a class="nav-link fw-medium active" asp-area="" asp-controller="CzymSieZajmujemies" asp-action="Index">Czym sie zajmujemy</a>
                        </li>
                        <li class="nav-item px-2"><a class="nav-item px-2"><a class="nav-link fw-medium active" asp-area="" asp-controller="Kontakt" asp-action="Index">Kontakt</a>
                        </li>
                        <li class="nav-item px-2"><a class="nav-item px-2"><a class="nav-link fw-medium active" asp-area="" asp-controller="Opinie" asp-action="Index">Opinie</a>
                        </li>
                        <li class="nav-item px-2"><a class="nav-item px-2"><a class="nav-link fw-medium active" asp-area="" asp-controller="PytaniaIOdpowiedzi" asp-action="Index">Pytania i odpowiedzi</a>
                        </li>
                    </ul>
                    *@
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/lib/traffico/public/vendors/popperjs/popper.min.js"></script>
    <script src="~/lib/traffico/public/vendors/is/is.min.js"></script>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
    <script src="~/lib/traffico/public/vendors/fontawesome/all.min.js"></script>
    <script src="~/lib/traffico/public/assets/js/theme.js"></script>
</body>
</html>
